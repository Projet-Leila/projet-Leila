{% extends 'base.html.twig' %}

{% block title %}Modifier les utilisateurs
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modifier les information de {{ user.username }}</h1>
		{{ form_start(form, {'attr': {'id': 'new_edit_utilisateur'}}) }}
		{# utilisation de classes bootstrap pour la mise en forme #}
		<div class="row">
			<div class="col-12">
				<label>Nom</label>
				{{ form_widget(form.username) }}
			</div>
			<div class="col-12">
				<label>Pr√©nom</label>
				{{ form_widget(form.lastname) }}
			</div>
			<div class="col-12">
				{{ form_label(form.tel) }}
				{{ form_widget(form.tel) }}
			</div>
			<select
				name="role_change" id="role_change">
				<option value="ROLE_USER">Utilisateur</option>
				<option value="ROLE_ADMIN" {% if "ROLE_ADMIN" in user.roles %} selected {% endif %}>Administrateur</option>

				<option value="ROLE_DON" {% if "ROLE_DON" in user.roles %} selected {% endif %}>Donateur</option>

			</select>

			<div class="col-12">
				{{ form_label(form.email) }}
				{{ form_widget(form.email) }}
			</div>
	</div>
</div>
<button class="btn btn-success">{{ button_label|default('Modifier') }}</button>
<a href="{{ path('user_index') }}">back to list</a>
{{ include('user/_delete_form.html.twig') }}
</div>

<div id='scroll_to_top' class='opacity'>
<div id='scroll_to_top' class='opacity'>
	<img src="{{ asset('images/collapse_arrow.svg') }}" alt="Retourner en haut">
</div>

<script src="{{ asset('js/menu.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jQuery_lib.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/jQuery.js') }}"></script>
{% endblock %}
