{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/login-out.css') }}"/>

{% endblock %}


{% block body %}
<div class="container">
        <ol class="breadcrumb">
            <li><a href="{{ path('accueil') }}">Accueil</a></li>
            <li class="active">Inscription</li>
        </ol>
        <div class="Nom-asso1">
            <h1 class="Nom-asso2">Inscription
            </h1>
        </div>
        

        {{ form_start(form,{'attr': {'id': 'new_edit_utilisateur'}}) }}
                <div class="block">
                <div class="inscription">

                        <div class="col-12">
                                <label>Nom</label>
                                {{ form_widget(form.username) }}
                        </div>
                        <div class="col-12">
                                <label>Prénom</label>
                                {{ form_widget(form.lastname) }}
                        </div>
                        <div class="col-12">
                                <label>Téléphone</label>
                                {{ form_widget(form.tel) }}
                        </div>
                        <div class="col-12">
                                <label>Email</label>
                                {{ form_widget(form.email) }}
                        </div>
                        <div class="col-12">
                                <label>Mot de passe</label>
                                {{ form_widget(form.password) }}
                        </div>
                        <div class="col-12">
                                <label for="verifpass">Entrez le mot de passe à nouveau</label></br>
                                <input class="form-control" type="password" id="verifpass" required>
                        </div>
                        </br>
                        <div class="btn_inscript">
                        <button class="btn btn-success">{{ button_label|default('Inscription') }}</button>
                        </div>
                </div>
                </div>
        {{ form_end(form) }}

</div>

        </br></br>
        <div id='scroll_to_top' class='opacity'>
                <img src="{{ asset('images/collapse_arrow.svg') }}" alt="Retourner en haut">
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"> </script>
        <script src="{{ asset('js/script.js') }}"></script>
        <script src="{{ asset('js/menu.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jQuery_lib.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/jQuery.js') }}"></script>
{% endblock %}
